# =============================================================================
# Woerk Application - Default Environment Variables
# =============================================================================
# This file contains all anticipated environment variables with their default
# values. Copy relevant sections to your .env files and uncomment as needed.
#
# Frontend: Copy to frontend/.env.local
# Backend:  Copy to backend/.env
#
# IMPORTANT: Never commit actual .env files with real credentials!
# =============================================================================

# =============================================================================
# DEVELOPMENT/PRODUCTION ENVIRONMENT
# =============================================================================

# NODE_ENV=development
# NODE_ENV=production

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# Development ports (use these for npm run dev)
# PORT=3021
# FRONTEND_PORT=3020

# Production ports (use these for npm start)
# PORT=3011
# FRONTEND_PORT=3010

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string
# DATABASE_URL="postgresql://woerk_user:your_password@localhost:5432/woerk"

# Alternative database configuration (if not using DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=woerk
# DB_USER=woerk_user
# DB_PASSWORD=your_password
# DB_SSL=false

# Database connection pool settings
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# DB_POOL_IDLE_TIMEOUT=10000

# =============================================================================
# AUTHENTICATION & JWT
# =============================================================================

# JWT Configuration
# JWT_SECRET="generate-a-secure-random-string-here"
# JWT_EXPIRES_IN="7d"
# JWT_REFRESH_EXPIRES_IN="30d"

# NextAuth Configuration (if using)
# NEXTAUTH_URL=http://localhost:3020
# NEXTAUTH_SECRET="another-secure-random-string"

# Session configuration
# SESSION_TIMEOUT=1800
# SESSION_COOKIE_NAME="woerk-session"
# SESSION_SECURE=false

# =============================================================================
# OAUTH PROVIDER CONFIGURATION
# =============================================================================

# Google OAuth
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"

# Microsoft Azure AD (for federated universities)
# AZURE_AD_CLIENT_ID="your-azure-client-id"
# AZURE_AD_CLIENT_SECRET="your-azure-client-secret"
# AZURE_AD_TENANT_ID="your-tenant-id"

# LinkedIn OAuth (for external users)
# LINKEDIN_CLIENT_ID="your-linkedin-client-id"
# LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# ORCID OAuth
# ORCID_CLIENT_ID="your-orcid-client-id"
# ORCID_CLIENT_SECRET="your-orcid-client-secret"
# ORCID_ENVIRONMENT="sandbox"

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================

# Grants.gov API
# GRANTS_GOV_API_KEY="your-grants-gov-api-key"
# GRANTS_GOV_BASE_URL="https://www.grants.gov/api/common"

# Grouper REST API
# GROUPER_API_URL="https://grouper.example.edu/grouper-ws"
# GROUPER_API_USER="api-user"
# GROUPER_API_PASSWORD="api-password"
# GROUPER_API_VERSION="v2_5_000"

# LDAP Configuration
# LDAP_URL="ldaps://ldap.example.edu:636"
# LDAP_BIND_DN="cn=admin,dc=example,dc=edu"
# LDAP_BIND_PASSWORD="ldap-password"
# LDAP_BASE_DN="dc=example,dc=edu"
# LDAP_USER_BASE="ou=people,dc=example,dc=edu"
# LDAP_GROUP_BASE="ou=groups,dc=example,dc=edu"

# University Federation Configuration
# FEDERATED_DOMAINS="oregonstate.edu,stanford.edu,mit.edu"
# SAML_CERT_PATH="/path/to/saml/cert.pem"
# SAML_KEY_PATH="/path/to/saml/private.key"

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# AWS S3 Configuration
# AWS_REGION="us-west-2"
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# S3_BUCKET="woerk-files"
# S3_ENDPOINT="https://s3.amazonaws.com"

# POSIX Storage Configuration
# POSIX_STORAGE_PATH="/shared/projects"
# POSIX_TEMP_PATH="/tmp/woerk-uploads"

# File Upload Limits
# MAX_FILE_SIZE="10737418240"
# MAX_FILES_PER_UPLOAD=10
# ALLOWED_FILE_TYPES="*"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# AWS SES Settings (Primary email service)
# AWS_REGION="us-west-2"
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# EMAIL_FROM="Woerk System <woerk@example.edu>"
# FRONTEND_URL="http://localhost:3021"

# Alternative SMTP Settings (Fallback)
# SMTP_HOST="smtp.example.edu"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="woerk@example.edu"
# SMTP_PASSWORD="smtp-password"
# SMTP_FROM="Woerk System <woerk@example.edu>"

# Email Templates
# EMAIL_VERIFICATION_SUBJECT="Verify your Woerk account"
# EMAIL_RESET_SUBJECT="Reset your Woerk password"
# EMAIL_WELCOME_SUBJECT="Welcome to Woerk"

# Email verification settings
# EMAIL_VERIFICATION_EXPIRES="24h"
# EMAIL_REVERIFICATION_DAYS=90

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URLs (for frontend)
# NEXT_PUBLIC_API_URL=http://localhost:3021
# NEXT_PUBLIC_WS_URL=ws://localhost:3021

# Feature flags
# NEXT_PUBLIC_ENABLE_REGISTRATION=true
# NEXT_PUBLIC_ENABLE_EXTERNAL_USERS=true
# NEXT_PUBLIC_ENABLE_GRANTS_SEARCH=true
# NEXT_PUBLIC_ENABLE_TERMINAL=true
# NEXT_PUBLIC_ENABLE_FILE_MANAGEMENT=true

# UI Configuration
# NEXT_PUBLIC_APP_NAME="Woerk"
# NEXT_PUBLIC_APP_LOGO="/logo.png"
# NEXT_PUBLIC_SUPPORT_EMAIL="support@example.edu"

# Analytics (optional)
# NEXT_PUBLIC_GA_TRACKING_ID="GA_MEASUREMENT_ID"
# NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"

# =============================================================================
# SSH TERMINAL CONFIGURATION
# =============================================================================

# SSH Bastion Host
# SSH_BASTION_HOST="bastion.example.edu"
# SSH_BASTION_PORT=22
# SSH_BASTION_USER="woerk-bastion"

# SSH Certificate Authority
# SSH_CA_PRIVATE_KEY_PATH="/path/to/ssh-ca/private.key"
# SSH_CA_PUBLIC_KEY_PATH="/path/to/ssh-ca/public.key"

# Terminal session limits
# TERMINAL_MAX_SESSIONS=5
# TERMINAL_SESSION_TIMEOUT=3600
# TERMINAL_IDLE_TIMEOUT=1800

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Configuration
# CORS_ORIGIN="http://localhost:3020,http://localhost:3010"
# CORS_CREDENTIALS=true

# Rate limiting
# RATE_LIMIT_WINDOW=900000
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_SKIP_SUCCESSFUL=false

# Security headers
# SECURITY_HELMET_ENABLED=true
# SECURITY_HSTS_MAX_AGE=31536000
# SECURITY_CSP_ENABLED=true

# Password requirements
# PASSWORD_MIN_LENGTH=12
# PASSWORD_REQUIRE_UPPERCASE=true
# PASSWORD_REQUIRE_LOWERCASE=true
# PASSWORD_REQUIRE_NUMBERS=true
# PASSWORD_REQUIRE_SYMBOLS=true

# Account lockout
# MAX_LOGIN_ATTEMPTS=5
# ACCOUNT_LOCKOUT_DURATION=900

# =============================================================================
# BACKGROUND JOBS & QUEUES
# =============================================================================

# pg-boss configuration
# PG_BOSS_CONNECTION_STRING="postgresql://woerk_user:password@localhost:5432/woerk"
# PG_BOSS_SCHEMA="pgboss"
# PG_BOSS_MAX_CONNECTIONS=10

# Job configuration
# JOB_RETRY_LIMIT=3
# JOB_RETRY_DELAY=30000
# JOB_CLEANUP_DAYS=7

# Scheduled jobs
# ENABLE_USAGE_TRACKING=true
# ENABLE_ALLOCATION_MONITORING=true
# ENABLE_EMAIL_NOTIFICATIONS=true
# ENABLE_RESOURCE_CLEANUP=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging configuration
# LOG_LEVEL="info"
# LOG_FORMAT="json"
# LOG_FILE_PATH="/var/log/woerk/app.log"
# LOG_MAX_SIZE="10m"
# LOG_MAX_FILES=5

# Metrics and monitoring
# METRICS_ENABLED=true
# METRICS_PORT=9090
# METRICS_PATH="/metrics"

# Health check configuration
# HEALTH_CHECK_TIMEOUT=5000
# HEALTH_CHECK_INTERVAL=30000

# Error reporting
# SENTRY_DSN="your-sentry-dsn"
# SENTRY_ENVIRONMENT="development"

# =============================================================================
# BILLING & USAGE
# =============================================================================

# Billing configuration
# BILLING_ENABLED=true
# BILLING_CURRENCY="USD"
# BILLING_PRECISION=4

# Usage tracking
# USAGE_COLLECTION_INTERVAL=300000
# USAGE_RETENTION_DAYS=1095
# USAGE_EXPORT_FORMAT="csv"

# Default allocation limits
# DEFAULT_CPU_HOURS=100
# DEFAULT_GPU_HOURS=20
# DEFAULT_STORAGE_GB=1000
# DEFAULT_MEMORY_GB_HOURS=500

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development mode settings
# DEV_ENABLE_MOCK_AUTH=false
# DEV_ENABLE_DEMO_DATA=false
# DEV_SKIP_EMAIL_VERIFICATION=false
# DEV_ENABLE_SQL_LOGGING=false

# Testing configuration
# TEST_DATABASE_URL="postgresql://woerk_user:password@localhost:5432/woerk_test"
# TEST_TIMEOUT=30000
# TEST_COVERAGE_THRESHOLD=80

# Next.js specific
# NEXT_TELEMETRY_DISABLED=1
# ANALYZE_BUNDLE=false

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE="0 2 * * *"
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET="woerk-backups"

# Database backup
# DB_BACKUP_ENABLED=true
# DB_BACKUP_PATH="/backups/database"
# DB_BACKUP_COMPRESSION=true

# File backup
# FILE_BACKUP_ENABLED=true
# FILE_BACKUP_PATH="/backups/files"

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Caching
# REDIS_URL="redis://localhost:6379"
# CACHE_TTL_DEFAULT=300
# CACHE_TTL_USER_SESSION=1800
# CACHE_TTL_PROJECT_DATA=600

# Database query optimization
# DB_QUERY_TIMEOUT=30000
# DB_STATEMENT_TIMEOUT=60000
# DB_ENABLE_QUERY_LOGGING=false

# API response optimization
# API_PAGINATION_DEFAULT_LIMIT=20
# API_PAGINATION_MAX_LIMIT=100
# API_RESPONSE_COMPRESSION=true

# =============================================================================
# COMPLIANCE & GOVERNANCE
# =============================================================================

# Data retention
# DATA_RETENTION_AUDIT_LOGS=2555
# DATA_RETENTION_USAGE_RECORDS=1095
# DATA_RETENTION_USER_DATA=730

# Export control
# EXPORT_CONTROL_ENABLED=false
# EXPORT_CONTROL_API_URL="https://export-control.example.edu/api"

# Privacy compliance
# GDPR_ENABLED=true
# FERPA_ENABLED=true
# HIPAA_ENABLED=false

# =============================================================================
# CUSTOM UNIVERSITY CONFIGURATION
# =============================================================================

# University-specific settings
# UNIVERSITY_NAME="Example University"
# UNIVERSITY_DOMAIN="example.edu"
# UNIVERSITY_LOGO_URL="/university-logo.png"

# Default billing configuration for .edu users
# REQUIRE_BILLING_INFO=true
# DEFAULT_BILLING_VALIDATION_REGEX="^[0-9]{6}$"
# DEFAULT_ACTIVITY_CODE_REGEX="^[A-Z]{3}[0-9]{3}$"

# Resource limits per role
# FACULTY_DEFAULT_CPU_HOURS=1000
# FACULTY_DEFAULT_GPU_HOURS=100
# STAFF_DEFAULT_CPU_HOURS=500
# STAFF_DEFAULT_GPU_HOURS=50
# STUDENT_DEFAULT_CPU_HOURS=100
# STUDENT_DEFAULT_GPU_HOURS=10